<Project Sdk="Microsoft.NET.Sdk" ToolsVersion="15.0">
  <PropertyGroup>
    <TargetFrameworks>net35</TargetFrameworks>
    <OutputType>WinExe</OutputType>
    <RootNamespace>VersionFileGenerator</RootNamespace>
    <AssemblyName>VersionFileGenerator</AssemblyName>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="CommandLineParser" Version="1.9.71" />
    <PackageReference Include="JetBrains.Annotations" Version="8.0.5.0" />
  </ItemGroup>
  <ItemGroup>
    <Reference Include="System" />
    <Reference Include="System.Core" />
    <Reference Include="System.Xml.Linq" />
    <Reference Include="System.Data.DataSetExtensions" />
    <Reference Include="System.Data" />
    <Reference Include="System.Xml" />
  </ItemGroup>
  <ItemGroup>
    <Compile Include="Program.cs" />
  </ItemGroup>
  <ItemGroup>
    <None Include="App.config" />
  </ItemGroup>
  <PropertyGroup>
    <PostBuildEvent>"$(SolutionDir)VersionFileGenerator\bin\$(Configuration)\$(TargetFrameWork)\VersionFileGenerator.exe" --solution="$(SolutionDir)\</PostBuildEvent>
  </PropertyGroup>
  <PropertyGroup Condition="'$(Configuration)|$(TargetFramework)|$(Platform)'=='Debug|net451|AnyCPU'">
    <DefineConstants>TRACE;DEBUG;NET35</DefineConstants>
    <OutputPath>bin\Debug\net35\</OutputPath>
  </PropertyGroup>
  <Import Project="$(SolutionDir)common.proj" Condition="Exists('$(SolutionDir)common.proj')" />
</Project>
